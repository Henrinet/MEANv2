<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
<br>
{{# each commodities }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="clear-fix">
                <img width="140" height="140" src="{{ this.img }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h5>{{ this.name }}</h5>
                        <div class="price">${{ this.price }}</div>
                        <p class="description">{{ this.description }}</p>
                        <div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success" role="button">Add to Shopping Cart</a>
                        </div>
                    </div>
                </div>

            </div>
        {{/each}}
    </div>
{{/each}}

