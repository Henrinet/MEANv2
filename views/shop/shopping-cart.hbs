<br>
<div class="row">
<div class="col-md-4 col-md-offset-4"></div>
<h1>Shopping Cart</h1>
</div>
{{# if commodities }}

    <div class="row">
        <div class="col-md-2 col-md-offset-4"></div>

        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each commodities }}
                    <li class="list-group-item" >

                        <strong>{{ this.item.name }}</strong>
                        <span class="label label-success">${{ this.price }} x </span><span class="badge badge-pill badge-info">{{ this.qty }}</span>
                        <div class="btn-group pull-right">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                <li class="dropdown-item"><a href="/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-4"></div>
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong class="pull-right">Total: ${{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-2 col-md-offset-4"></div>
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success pull-right">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}
